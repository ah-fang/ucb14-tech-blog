<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="text">
      {{comment_text}}
    </div>
        
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>

  </section>
  {{/each}}
</div> 